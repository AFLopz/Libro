Ejercicio 2
  mkdir libro
  cd libro
  git init
  echo "# Libro" >> README.md
  git add README.md
  git commit -m "first commit"
  git branch -M main
  git remote add origin https://github.com/AFLopz/Libro.git
  git push -u origin main

